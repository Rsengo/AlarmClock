<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/holo_green_light</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>
    <style name="MyButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@android:color/holo_green_light</item>
        <item name="colorControlHighlight">@android:color/holo_orange_dark</item>
    </style>
    <style name="MyTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowBackground">@android:color/holo_green_light</item>
        <item name="android:colorControlNormal">@android:color/holo_green_light</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cancel"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioNever"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Никогда"
                android:theme="@style/MyRadioButton"/>

            <RadioButton
                android:id="@+id/radioDay"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:text="Каждый день"
                android:theme="@style/MyRadioButton"/>

            <RadioButton
                android:id="@+id/radioWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Каждую неделю"
                android:theme="@style/MyRadioButton"/>

            <RadioButton
                android:id="@+id/radioMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Каждый месяц"
                android:theme="@style/MyRadioButton"/>

            <RadioButton
                android:id="@+id/radioYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Каждый год"
                android:theme="@style/MyRadioButton"/>

        </RadioGroup>
    <Button
        android:id="@+id/cancel"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:text="Отмена"
        android:theme="@style/MyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group" />

    <Button
        android:id="@+id/ok"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text="ОК"
        android:theme="@style/MyButton"
        app:layout_constraintStart_toEndOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/group" />
</android.support.constraint.ConstraintLayout>